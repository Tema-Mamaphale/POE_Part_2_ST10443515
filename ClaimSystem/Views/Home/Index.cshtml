@*
    this view was developed with the assistance of AI tools
*@
@{
    ViewData["Title"] = "Home";
}

<section class="hero mb-5">
    <h1 class="display-6 brand-serif mb-1">Contract Monthly Claim System</h1>
    <p class="script fs-4 mb-0">simple submissions · clear reviews · visible status</p>
</section>

<div class="row g-4">

    <div class="col-md-4">
        <div class="tile h-100">
            <div class="icon-pill mb-2"><i class="bi bi-file-earmark-plus"></i></div>
            <h2 class="h5 brand-serif mb-1">Lecturer — Submit</h2>
            <p class="text-secondary">Capture hours, see the total instantly, and attach supporting files.</p>
            <a class="btn btn-olive" href="@Url.Action("Submit", "Claims")" aria-label="Open lecturer submission">
                <i class="bi bi-arrow-right-short"></i> Open
            </a>
        </div>
    </div>


    <div class="col-md-4">
        <div class="tile h-100">
            <div class="icon-pill mb-2"><i class="bi bi-clipboard-check"></i></div>
            <h2 class="h5 brand-serif mb-1">Coordinator — Review</h2>
            <p class="text-secondary">Review <strong>Submitted</strong> claims, validate details, and forward to the manager.</p>
            <a class="btn btn-olive" href="@Url.Action("Review", "Claims")" aria-label="Open coordinator review">
                <i class="bi bi-arrow-right-short"></i> Open
            </a>
        </div>
    </div>

 
    <div class="col-md-4">
        <div class="tile h-100">
            <div class="icon-pill mb-2"><i class="bi bi-clipboard2-check"></i></div>
            <h2 class="h5 brand-serif mb-1">Manager — Review</h2>
            <p class="text-secondary">Assess <strong>Pending Reviews</strong>, then approve or reject.</p>
            <a class="btn btn-olive" href="@Url.Action("ManagerReview", "Claims")" aria-label="Open manager review">
                <i class="bi bi-arrow-right-short"></i> Open
            </a>
        </div>
    </div>
</div>


<div class="row g-4 mt-1">
    <div class="col-12">
        <div class="tile h-100">
            <div class="icon-pill mb-2"><i class="bi bi-activity"></i></div>
            <h2 class="h5 brand-serif mb-1">Track Status</h2>
            <p class="text-secondary">Follow each claim from Submitted → Pending Review → Approved/Rejected.</p>
            <a class="btn btn-ghost" href="@Url.Action("StatusList", "Claims")" aria-label="Open status list">
                <i class="bi bi-search me-1"></i> Open
            </a>
        </div>
    </div>
</div>
